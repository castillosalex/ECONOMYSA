
@{
    ViewBag.Title = "Index";
}

<h2>ADMINISTRAR CLIENTE</h2>
<link href="~/Content/datatables.css" rel="stylesheet" />
<link href="~/Content/CSSERROR.css" rel="stylesheet" />
<button type="button" onclick="abrirModal(0)" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Agregar</button>

<div id="tabla">
    
</div>
<div id="myModal" class="modal" role="dialog">
    <div class="modal-dialog">

        
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 id="lblTitulo" class="modal-title">Registrar Cliente</h4>
            </div>
            <div class="modal-body">
                <table style="width:80%;margin:auto">
                    
                        <td><input style="display:none;" type="text" id="txtid" /></td>
                    
                    <tr>
                        <td>Ingrese nombre </td>
                        <td><input class="borrar obligatorio" type="text" id="txtnombre" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese apellido paterno</td>
                        <td><input class="borrar obligatorio" id="txtapPaterno" type="text" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese apellido Materno</td>
                        <td><input class="borrar obligatorio" id="txtapMaterno" type="text" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese celular</td>
                        <td><input class="borrar obligatorio" id="txtCelular" type="number" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese e-mail</td>
                        <td><input class="borrar obligatorio" id="txtcorreo" type="text" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese dirección</td>
                        <td><input class="borrar obligatorio" id="txtdireccion" type="text" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese Numero de Documento</td>
                        <td><input class="borrar obligatorio" id="txtnumeroDocumento" type="number" /></td>
                    </tr>

                </table>
            </div>
            <div class="modal-footer">
                <button onclick="Agregar()" id="btnRegistrar" type="button" class="btn btn-success">Registrar</button>
                <button type="button" class="btn btn-success" id="btnActualizar" style="display:none;" onclick="Actualizar()">Actualizar</button>
                <button id="btnCancelar" type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
            </div>
        </div>

    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/Cliente.js"></script>
<script src="~/Scripts/datatables.min.js"></script>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>